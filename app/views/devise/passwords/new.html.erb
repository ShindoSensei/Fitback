<%= render "devise/shared/header" %>
<div class='margin-top-header col-sm-8 col-sm-offset-2 col-xs-12'>
  <div class='panel panel-default'>
      <div class='panel-heading'>
        <h1 class='panel-title text-white'>Forgot your password?</h1>
      </div>

      <div class='panel-body'>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email , :class => "text-white"%><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions" ,:class => "btn btn-md text-white button-black"%>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
  </div>

</div>
